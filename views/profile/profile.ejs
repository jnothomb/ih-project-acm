<link rel='stylesheet' href='/stylesheets/profile-style.css' />


<div class="profile-container">

    <img id="background-user-image">

    <img id="icon-user-image" src="<%= usr.profileImg %>">

    <div class="profile-info">

        <div class="profile-name-and-btn">

            <h3 id="profile-name">
                <%= usr.firstName + " " + usr.lastName %>
            </h3>


            <% if (user._id.equals(usr._id)) { %>
                <form action="/edit-profile/<%= usr.id %>">
                    <button id="edit-profile-btn" class="button">Edit Profile</button>
                </form>
                <% } %>

        </div>

        <table>
            <tr>
                <td>
                    Phone Number:

                </td>
                <td>
                    <%= usr.phoneNumber %>
                </td>
            </tr>

            <tr>
                <td>
                    Email:
                </td>

                <td>
                    <%= usr.email %>
                </td>
            </tr>

            <tr>
                <td>
                    Cohort City:

                </td>
                <td>
                    <%= usr.cohortCity %>
                </td>
            </tr>

            <tr>
                <td>
                    Cohort Year:
                    <%= usr.cohortYear %>
                </td>
                <td>
                    <%= usr.cohortYear %>
                </td>
            </tr>

            <tr>
                <td>
                    Current Country:

                </td>
                <td>
                    <%= usr.country %>
                </td>
            </tr>

            <tr>
                <td>
                    Current City:
                </td>
                <td>
                    <%= usr.city %>
                </td>
            </tr>
            <tr>
                <td>
                    Instagram:

                </td>
                <td>
                    <%= usr.socialMedia.instagram %>
                </td>
            </tr>

            <tr>
                <td>
                    Linkedin:

                </td>
                <td>
                    <%= usr.socialMedia.linkedin %>
                </td>
            </tr>
            <tr>
                <td>
                    Pinterest:
                </td>
                <td>
                    <%= usr.socialMedia.pinterest %>
                </td>
            </tr>





        </table>

    </div>

</div>