    </form>
    <% if(searchResult !== null) { %>
        <pre><%= JSON.stringify(searchResult,null,2) %></pre>
        <% } %>

            <% if(users) { %>

                <h3>List</h3>

                <ul>
                    <% users.forEach(el => { %>
                        <% if(user.username !== el.username) { %>
